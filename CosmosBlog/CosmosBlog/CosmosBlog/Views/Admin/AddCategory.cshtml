@model CosmosBlog.Models.Category

@{
    ViewBag.Title = "AddCategory";
}

<div class="row">
    <div class="col-xs-12">
        <h1>Add A New Category: </h1>
        @Html.ActionLink("Return To List", "ManageCategories", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(m => m.CategoryName)
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", placeholder = "eg. NASA" })
            </div>           
            <button type="submit" class="btn btn-success">Save</button>
        }
    </div>
</div>