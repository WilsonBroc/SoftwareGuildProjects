@model CosmosBlog.Models.StaticPage

@{
    ViewBag.Title = "EditStaticPage";
}

<div>
    <div class="row">
        <div class="col-sm-1"> @*Empty div for left side*@</div>
        <div class="col-sm-11">

            @* This is where the posts begin*@
            <br />


            @using (@Html.BeginForm())
            {
                <table>
                    <tbody>
                        <tr>
                            <th></th>
                            <td>
                                <h1>Edit Static Page</h1>
                            </td>
                        </tr>
                        <tr>
                            <th>Title: </th>
                            
                            @if ((@Model.PageID == 1) || (@Model.PageID == 2))
                            {
                                @Html.HiddenFor(a => a.PageID)
                                @Html.HiddenFor(a=>a.PageTitle)
                                <td>@Model.PageTitle</td>
                            }
                            else
                            {
                                <td>@Html.EditorFor(a => a.PageTitle, new { @class = "form-control" })</td>
                            }
                            
                        </tr>

                        <tr>
                            <th>Content: </th>
                            <td>
                                @Html.TextAreaFor(a => a.PageContent, new { id = "summernote" })
                              
                            </td>
                        </tr>
                        <tr>
                        
                            <th></th>
                            <td><button type="submit" class="btn btn-success">Save</button></td>
                        </tr>
                    </tbody>
                </table>
            }

        </div>
        <div class="col-sm-2"></div>
    </div>
</div>

@section scripts{
    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.1/summernote.css" rel="stylesheet">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.1/summernote.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 300
            });
        });

    </script>
}


