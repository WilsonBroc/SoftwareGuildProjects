@model CosmosBlog.Models.StaticPage

@{
    ViewBag.Title = "ViewSingleStaticPage";
}

<style>
    .container {
        max-width: 100%;
        padding: 0;
        min-height: 100%;
    }

    p {
        font-family: 'Poppins', sans-serif;
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
    }

    .tags {
        font-size: 11px;
    }
</style>

<div class="container">

    <div class="row">
        <div class="col-sm-1"> @* Empty div for left side *@</div>
        <div class="col-sm-9">

            @* This is where the post begins *@
            <br />
            <div class="col-sm-10" style="padding-right: 100px">

                <h2>@Model.PageTitle</h2>
                @if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("Manager"))
                {
                    <span>
                    @Html.ActionLink("Edit", "EditStaticPage", "Admin", new {id = @Model.PageID}, new {@class = "btn btn-primary btn-warning"})
                    @if ((Model.PageID != 1) && (Model.PageID != 2))
                    {
                        @Html.ActionLink("Delete", "DeleteStaticPage", "Admin", new {id = @Model.PageID}, new {@class = "btn btn-primary btn-danger"})
                    }
                </span>
                }
                <br/>
                <br/>

                @Html.Raw(@Model.PageContent)<br/>

                @Html.ActionLink("Return Home", "Index", "Home")<br /><br />

            </div>

        </div>
    </div>
</div>
