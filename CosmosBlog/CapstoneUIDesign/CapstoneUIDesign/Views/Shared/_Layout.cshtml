<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Poppins:400,700,600,500,300' rel='stylesheet' type='text/css'>
    <style>
        
            .navbar-inverse .navbar-nav > li > a {
            color: white;
                
            }
    
    
            
            .navbar-collapse.collapse {
                float: right;
                margin-top: 15px;
                margin-right: 60px
            }
        
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top" style="margin-top:-50px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img src="http://i63.tinypic.com/2qtedk5.png" style="max-height: 55px; margin-top: 10px; margin-bottom: 10px; margin-left: 120px" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="navOption">@Html.ActionLink("ABOUT", "About", "Static")</li>
                    <li class="navOption">@Html.ActionLink("DISCLAIMER", "Disclaimer", "Static")</li>
                    <li class="navOption">@Html.ActionLink("BLOG", "Index", "Blog")</li>
                    <li class="navOption">@Html.ActionLink("ADMIN", "Index", "Admin")</li>
                    <li class="navOption">@Html.ActionLink("MORE", "Index", "Blog")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @*<div class="container body-content">*@
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

